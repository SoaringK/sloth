<view class="container">
    <view class="body" wx:for="{{list}}">
    <view class="list">     
        <view>
            <view class="state">
                {{item.state}}
            </view>
            <view class="time">
                {{item.time}}
            </view>
        </view>
        <view class="restaurant">
            {{item.restaurant}}
        </view>   
        <view  wx:for="{{item.goods}}" class="goods" wx:for-item="goods_item">
            <view class="amount">
                *{{goods_item.amount}}
            </view>
            <view class="food">
                {{goods_item.food}}
            </view>
        </view>
        <view class="total">
            共{{num}}件商品，实付<text class="text">{{cost}}元</text>
        </view>
    </view>
    </view>
    <view class="last">
        没有更多订单啦~
    </view>
</view>