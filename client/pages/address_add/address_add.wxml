<view class="container">
    <form bindsubmit='formSubmit'>
      <view class="body">
          <view class="text">联系人</view>
          <textarea name="namearea" placeholder="联系人姓名" class="nameinput"/>
      </view>
      <view class="body">
          <view class="text">手机号码</view>
          <textarea name="phonearea" placeholder="可以联系到你的号码" class="phoneinput"/>
      </view>
      <view class="body">
          <view class="text">地址</view>
          <textarea name="addressarea" placeholder="学校/校区/宿舍号" class="addrinput"/>
      </view>
        <button formType='submit'>新增地址</button>
    </form>
</view>