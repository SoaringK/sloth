<view class="container1">
  <view class='block1'>
    <view class='title'>{{info.job_name}}</view>
    <view class='highlight'>
      <view class='salary'>{{info.salary}}</view>
      <view class='div_string'></view>
      <view class='job_tag2'>日结</view>
    </view>
    <view class='div_hr'></view>
    <view class='row_text'>
      <view class='sub_title'>工作时间:</view>
      <view class='sub_content'>{{info.work_time}}</view>
    </view>

    <view class='row_text'>
      <view class='sub_title'>工作地点:</view>
      <view class='sub_content'>{{info.work_address}}</view>
    </view>
    <view class='row_text'>
      <view class='sub_title'>工作要求:</view>
      <view class='sub_content'>{{info.work_require}}</view>
 
    </view>
        <view class='row_text'>
      <view class='sub_title'>有效期限:</view>
      <view class='sub_content'>{{info.job_tag2}}</view>
    </view>
  </view>

  <view class='block1'>
    <view class='title2'>职位描述</view>
    <view class='div_hr'></view>
    <view class='job_info_detail'>{{info.job_description}}</view>
  </view>
  <view class='block1'>
    <view class='title2'>公司信息</view>
    <view class='div_hr'></view>
    <view class='row_text'>
      <view class='sub_title'>联系人:</view>
      <view class='sub_content'>{{info.contact_name}}</view>
    </view>
    <view class='row_text'>
      <view class='sub_title'>联系电话:</view>
      <view class='sub_content'> {{info.cantact_tel}}</view>
    </view>
    <view class='row_text'>
      <view class='sub_title'>简历投递邮箱:</view>
      <view class='sub_content'>{{info.contact_email}}</view>
    </view>
  </view>

  <view class='submit_btn'>
    <button formType="submit">报名参加</button>
  </view>

</view>